extends layouts/main-layout.pug

block style
    link(rel='stylesheet', href='/css/product.css')
        
block m-content
    main
        if prods.length >0
            .grid
                each product in prods
                    article.card.product-item
                        header.card__header
                            h1.product__title #{product.titles}
                        .card__image
                            img(src='http://diaoc5sao.vn/wp-content/uploads/2021/11/The-Ukrainian-Book-Institute-Purchases-380.9-Thousand-Books-for-Public-Libraries1.jpeg', alt='A Book')
                        .card__content
                            h2.product__price $19.99
                            p.product__description A very interesting book about so many even more interesting things!
                        .card__actions
                            button.btn Add to Cart
        else
            h1 No Products
    
